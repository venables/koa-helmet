{
  "name": "koa-helmet",
  "author": "Matt Venables <matt@venabl.es>",
  "description": "Security header middleware collection for koa",
  "license": "MIT",
  "version": "8.0.3",
  "main": "lib/koa-helmet.js",
  "typings": "./koa-helmet.d.ts",
  "files": [
    "lib",
    "koa-helmet.d.ts"
  ],
  "scripts": {
    "check": "npm run format:check && npm run lint && npm run test && npm run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit --pretty"
  },
  "keywords": [
    "security",
    "headers",
    "koa",
    "x-frame-options",
    "csp",
    "hsts"
  ],
  "repository": {
    "url": "https://github.com/venables/koa-helmet"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "peerDependencies": {
    "helmet": ">= 6",
    "koa": ">= 2"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/koa": "^3.0.1",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "koa-2": "npm:koa@^2.13.0",
    "koa-3": "npm:koa@^3.0.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.6"
  }
}
